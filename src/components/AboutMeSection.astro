---
import CvIcon from './Icons/CvIcon.astro'
import GithubLogo from './Icons/GithubLogo.astro'
import LinkedinIcon from './Icons/LinkedinIcon.astro'
import MailIcon from './Icons/MailIcon.astro'
import Section from './Section.astro'
const {
  translation: {
    INTRODUCCION_SECTION_TITLE,
    WORK_STATUS,
    NAME,
    FIRST_PARAGRAPH,
    SECOND_PARAGRAPH,
    THIRD_PARAGRAPH,
  },
} = Astro.props
---

<Section title={INTRODUCCION_SECTION_TITLE} id="about-me">
  <article class="w-full my-4 flex flex-col gap-3 md:flex-row md:w-[750px]">
    <img
      src="/public/me.png"
      alt="Persona de pie en la orilla del mar, con el agua tocando sus pies, bajo un cielo parcialmente nublado en la playa."
      class="w-full rounded md:w-80 h-full object-cover"
    />
    <div class="grid place-content-center">
      <span
        class="font-bold text- text-electric-violet-950 bg-electric-violet-300 transition-colors duration-300 place-self-start px-4 rounded-full py-2"
        >{WORK_STATUS}</span
      >
      <h3 class="text-xl font-black" set:html={NAME} />
      <p class="w-full">
        {FIRST_PARAGRAPH}
      </p>
      <p class="w-full" set:html={SECOND_PARAGRAPH} />
      <p class="w-full" set:html={THIRD_PARAGRAPH} />
      <footer class="flex gap-1">
        <a href="https://github.com/Jayslen" target="_blank">
          <GithubLogo />
        </a>
        <a href="#">
          <CvIcon />
        </a>
        <a href="mailto:jayslen134@gmail.com">
          <MailIcon />
        </a>
      </footer>
    </div>
  </article>

  <style>
    h3 span {
      background-clip: text;
      background-image: linear-gradient(to right, #56ab2f, #3b8ed5, #7c3aed);
      color: transparent;
      font-family: 'Satoshi', sans-serif;
      font-weight: 900;
    }
  </style>
</Section>
