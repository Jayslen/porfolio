---
import Background from '../components/Background.astro'

interface Props {
  title: string
}

const { title, lang } = Astro.props
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Porfolio web " />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <!-- HTML Meta Tags -->
    <title>Mi porfolio - Jayslen Rojas Serrano</title>
    <meta
      name="description"
      content="Tengo 19 años y resido en la República Dominicana, desarrollador front-end sin experiencia laboral, pero muchos proyectos hechos, estudiante autodidacta y actualmente estudiando desarrollo de software en el Instituto Tecnológico De Las América (ITLA)."
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://porfolio-eight-phi.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Mi porfolio - Jayslen Rojas Serrano" />
    <meta
      property="og:description"
      content="Tengo 20 años y resido en la República Dominicana, desarrollador front-end sin experiencia laboral, pero muchos proyectos hechos, estudiante autodidacta y actualmente estudiando desarrollo de software en el Instituto Tecnológico De Las América (ITLA)."
    />
    <meta
      property="og:image"
      content="https://opengraph.b-cdn.net/production/images/de47f8a7-1dfb-454b-9def-6d80a98edab1.png?token=lo_cUNrASt4GT4SiQdsEZGTfFFT-Gox22f-dLEBQFvU&height=900&width=1200&expires=33259082300"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="porfolio-eight-phi.vercel.app" />
    <meta
      property="twitter:url"
      content="https://porfolio-eight-phi.vercel.app/"
    />
    <meta name="twitter:title" content="Mi porfolio - Jayslen Rojas Serrano" />
    <meta
      name="twitter:description"
      content="Tengo 19 años y resido en la República Dominicana, desarrollador front-end sin experiencia laboral, pero muchos proyectos hechos, estudiante autodidacta y actualmente estudiando desarrollo de software en el Instituto Tecnológico De Las América (ITLA)."
    />
    <meta
      name="twitter:image"
      content="https://opengraph.b-cdn.net/production/images/de47f8a7-1dfb-454b-9def-6d80a98edab1.png?token=lo_cUNrASt4GT4SiQdsEZGTfFFT-Gox22f-dLEBQFvU&height=900&width=1200&expires=33259082300"
    />

    <!-- Meta Tags Generated via https://www.opengraph.xyz -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link
      href="https://api.fontshare.com/v2/css?f[]=general-sans@400&f[]=satoshi@900,700,500&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@2.4.1/dist/flowbite.min.css"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body class="bg-black relative size-full">
    <Background />
    <slot />
  </body>

  <style is:global>
    html {
      scroll-behavior: smooth;
    }
    h1,
    h2,
    h3 {
      font-family: 'Satoshi', sans-serif;
      font-display: swap;
      font-style: normal;
      color: #f7f7f7;
    }

    h1,
    h2,
    h3,
    p,
    span {
      margin: 0.25rem 0;
    }

    strong {
      color: #ffdead;
      font-weight: bolder;
    }

    p,
    span {
      color: #f7f7f7;
      font-family: 'General Sans', sans-serif;
      font-weight: 400;
      font-display: swap;
    }
  </style>
</html>
