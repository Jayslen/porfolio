---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://api.fontshare.com/v2/css?f[]=general-sans@400&f[]=satoshi@900,700,500&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    background: #f4f3ee;
  }
  h1,
  h2,
  h3 {
    font-family: 'Satoshi', sans-serif;
    font-display: swap;
    font-style: normal;
  }

  h1,
  h2,
  h3,
  p,
  span {
    margin: 0.25rem 0;
  }

  strong {
    color: #6222b5;
    font-weight: bolder;
  }
  p,
  span,
  a {
    font-family: 'General Sans', sans-serif;
    font-weight: 400;
  }
</style>
